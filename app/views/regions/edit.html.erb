<h1>Edit <%= @region.name %></h1>

<% if @region.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @region.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/regions/<%= @region.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="region_name">Region Name</label>
  <input id="region_name" name="region[name]" type="text" value="<%= @region.name %>">
  <button>Update Region</button>
</form>
