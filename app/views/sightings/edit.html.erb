<h1>Edit Sighting<h1>
<h2><%= @sighting.animal.name %> at <%= @sighting.region.name %></h2>
<h4><%= @sighting.created_at %></h4>

<% if @sighting.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sightings/<%= @sighting.id%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input name="sighting[animal_id]" type="hidden" value="<%= @sighting.animal.id %>">
  <select name="sighting[region_id]">
    <% @regions.each do |region| %>
      <option value="<%= region.id %>"><%= region.name %></option>
    <% end %>
  </select>
  <button>Update Sighting Location</button>
</form>
