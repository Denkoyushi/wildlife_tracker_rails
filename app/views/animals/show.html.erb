<h1>Species Name: <%= @animal.name %></h1>

<p><a href="/animals/<%= @animal.id %>/edit">Edit animal</a></p>
<p><a href="/animals/<%= @animal.id %>"
      data-confirm="Are you sure?"
      data-method="delete"
      rel="nofollow">Destroy animal</a></p>

<h3>Known Sightings</h3>

<form action="/sightings" method="post">
  <input name="sighting[animal_id]" type="hidden" value="<%= @animal.id %>">
  <select name="sighting[region_id]">
    <% @regions.each do |region| %>
      <option value="<%= region.id %>"><%= region.name %></option>
    <% end %>
  </select>
  <button>Add Animal Sighting</button>
</form>

<ol>
  <% @sightings.each do |sighting| %>
    <li><a href="/regions/<%= sighting.region.id %>"><%= sighting.region.name %></a></li>
      <p class="time"><a href="/sightings/<%= sighting.id %>/edit"><%= sighting.created_at %></a></p>
  <% end %>
</ol>

<p>Click to go back to the <a href="/animals">animals page</a> or go to the <a href="/regions">regions page</a></p>
